{
    "global": {
        "cookie-config": {
            "expire": 1800,
            "expire-from-now": true,
            "path": "/",
            "domain": ".${HTTP_HOST}"
        },
        "redirect-status": 307
    },
    "/aaaa": {
        "set-cookies": {
            "a-cookie": "Coookie set from A Local Shortener",
            "another-cookie": "This cookie was set by the shortening service"
        },
        "redirect-to": "/a-long-url"
    },
    "/bbbb": {
        "redirect-status": 303,
        "redirect-to": "/another-long-url"
    },
    "/cccc": {
        "dont-redirect-to": "/impossible"
    }
}
